.body
.header
  %h1
  = link_to root_path, class: 'device-header__link' do
    = image_tag 'logo/logo.png', alt: 'logo', class: 'device-header__link__image', height: '49', width: '185'


.main
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .main__box  
      .main__box__have
        %p アカウントをお持ちの方はこちら
        = link_to "新規会員登録", new_user_registration_path
      
      .main__box1
        .main__box1__facebook-btn
          = link_to "https://www.facebook.com/", class:"contents__btn contents__btn--facebook" do
            = icon('fab', 'facebook-square',  class: "contents__btn--icon")
            Facebookでログイン
      .main__box2
        .main__box2__google-btn
          %i.fab.fa-google
            googleでログイン

        

            

      .main-box3
        .mail-box3__hako
          .main-box3__mail 
            = f.email_field :email, autofocus: true, autocomplete: "email",placeholder:' メールアドレス',class:"mail_input"
          
          .main__box3__passward
            = f.password_field :password, autocomplete: "current-password",placeholder:' パスワード',class:"password_input"
        
          .main__box3__login
            %input{:type =>"submit", :value =>"ログアウト", :class =>"btn-icon"}/

          .main__box3__new
            = link_to "パスワードを忘れた場合", new_user_password_path

.fotter
  = link_to root_path, class: 'device-header__link' do
    = image_tag 'logo/logo-white.png', alt: 'logo', class: 'device-header__link__image', height: '49', width: '185'